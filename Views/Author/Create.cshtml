@model MyBookApp.Models.Author

@{
    ViewData["Title"] = "Författare";
}

<h1>Lägg till</h1>

<h4>Författare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Lägg till
                    författare</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Tillbaka</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
